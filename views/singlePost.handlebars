<!-- Post content -->
<div class="post">
  <h2>{{post.title}}</h2>
  <p>{{post.content}}</p>
  <button class="delete-post-btn" data-post-id="{{post.id}}">Delete Post</button>
</div>

<!-- Comments section -->
<section class="comments">
  <h3>Comments:</h3>
  {{#each comments}}
  <div class="comment">
    <p>{{this.text}}</p>
  </div>
  {{/each}}

  <!-- Add comment form -->
  <form id="add-comment-form" data-post-id="{{post.id}}">
    <textarea id="comment-text" placeholder="Add a comment..."></textarea>
    <button type="submit">Submit</button>
  </form>
  <script src="/js/addComment.js"></script>
</section>
