<div class="container">
  <h1>{{ post.title }}</h1>
  <p>{{ post.content }}</p>
  <p>Posted by {{ post.username }} on {{ post.createdAt }}</p>
  
  <h2>Comments</h2>
  {{#each comments}}
    <div class="comment">
      <p>{{ content }}</p>
      <p>Posted by {{ username }} on {{ createdAt }}</p>
    </div>
  {{/each}}
  
  <form id="comment-form">
    <label for="comment-content">Add a comment:</label>
    <textarea id="comment-content"></textarea>
    <button type="submit">Submit</button>
  </form>
</div>
